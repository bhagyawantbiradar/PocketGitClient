<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/themeBackgroundColor"
        android:layout_height="match_parent"
        tools:context=".screens.login.LoginScreen">

    <com.sarveshathawale.pocketgitclient.ui.PButton
            android:id="@+id/btnLoginWithGithub"
            android:textAllCaps="false"
            android:background="@drawable/login_button_selector"
            android:layout_width="match_parent"
            android:text="@string/log_in_with_github"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/login_button_padding"
            android:textSize="@dimen/s16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>